# =========================
# LLM & EMBEDDING PROVIDER (Cohere)
# =========================
COHERE_API_KEY=your-cohere-key-here
COHERE_CHAT_MODEL=command-r-plus-08-2024
EMBEDDING_MODEL_NAME=embed-english-v3.0

# =========================
# Vector Database (Qdrant)
# =========================
QDRANT_URL=https://xyz-example.us-east-1-0.aws.cloud.qdrant.io
QDRANT_API_KEY=your-qdrant-key-here
QDRANT_COLLECTION_NAME=course_content
# CRITICAL: Cohere v3 embeddings are 1024 dimensions
QDRANT_VECTOR_SIZE=1024

# =========================
# Database (Neon PostgreSQL)
# =========================
DATABASE_URL=postgresql://user:password@host:5432/dbname?sslmode=require
DB_POOL_MIN_SIZE=2
DB_POOL_MAX_SIZE=10

# =========================
# API Configuration
# =========================
ADMIN_API_KEY=your-admin-secret-key
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
RATE_LIMIT_PER_MINUTE=10

# =========================
# RAG Configuration
# =========================
RETRIEVAL_TOP_K=5
CONFIDENCE_THRESHOLD=0.6
ENABLE_RERANKING=true
# Cohere Rerank model (optional, good for accuracy)
RERANK_MODEL=rerank-english-v3.0

# =========================
# Content Ingestion
# =========================
DOCS_PATH=../docs
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# =========================
# App Settings
# =========================
ENVIRONMENT=development
LOG_LEVEL=INFO