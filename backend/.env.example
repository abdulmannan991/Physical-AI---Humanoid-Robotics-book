# =========================
# LLM PROVIDER (Google Gemini)
# =========================
COHERE_API_KEY=api_key
COHERE_CHAT_MODEL=command-r   
EMBEDDING_MODEL_NAME=embed-english-v3.0


# =========================
# Vector Database (Qdrant)
# =========================
QDRANT_URL=https://xyz-example.us-east-1-0.aws.cloud.qdrant.io
QDRANT_API_KEY=your-qdrant-key-here
QDRANT_COLLECTION_NAME=course_content
# CRITICAL: OpenAI text-embedding-3-small is 1536 dimensions
QDRANT_VECTOR_SIZE=1024

# =========================
# Database (Neon PostgreSQL)
# =========================
DATABASE_URL=postgresql://user:password@host:5432/dbname?sslmode=require
DB_POOL_MIN_SIZE=2
DB_POOL_MAX_SIZE=10

# =========================
# API Configuration
# =========================
ADMIN_API_KEY=your-admin-secret-key
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
RATE_LIMIT_PER_MINUTE=10

# =========================
# RAG Configuration
# =========================
RETRIEVAL_TOP_K=5
CONFIDENCE_THRESHOLD=0.35
ENABLE_RERANKING=false

# =========================
# Content Ingestion
# =========================
DOCS_PATH=../docs
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# =========================
# JWT Authentication
# =========================
# IMPORTANT: Generate a strong secret key using: openssl rand -hex 32
JWT_SECRET_KEY=your-jwt-secret-key-replace-with-strong-random-256bit-value
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440   # 1 day
JWT_REFRESH_TOKEN_EXPIRE_MINUTES=10080 # 7 days

# =========================
# App Settings
# =========================
ENVIRONMENT=development
LOG_LEVEL=INFO